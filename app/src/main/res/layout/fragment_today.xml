<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_today_pading">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/icon"
                android:padding="16dp"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/date_today_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    tools:text="26.02.2016" />

                <TextView
                    android:id="@+id/overall_today_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/textColor"
                    tools:text="Summary" />
            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/temp_text"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/air_temperature_today_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="30 C" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/feels_like"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/feels_like_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="30 C" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/wind_text"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/wind_speed_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="5 km/h" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/pressure_text"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/atmo_press_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="1010" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/humidity_text"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/text_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="79%" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/sunrise_sunset"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/susns_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="08:26 PM / 08:26 AM" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:text="@string/moonrise_moonset"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/moons_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fragment_today_pading"
                    android:textColor="@color/textColor"
                    tools:text="08:26 PM / 08:26 AM" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
