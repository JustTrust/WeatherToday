<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.belichenko.a.weathertoday.MainActivity$PlaceholderFragment">


    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">


            <ImageView android:id="@+id/imageView_today" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                tools:layout_width="65dp"
                tools:layout_height="65dp"/>

            <TextView android:id="@+id/date_today_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignLeft="@+id/overall_today_id"
                android:layout_alignParentTop="true" android:layout_alignStart="@+id/overall_today_id"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/overall_today_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/imageView_today"
                android:layout_centerHorizontal="true" android:text="Overall"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/textView3" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView_today" android:layout_marginTop="26dp"
                android:text="Air Temperature :" android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/air_temperature_today_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView"
                android:layout_toEndOf="@+id/date_today_id" android:layout_toRightOf="@+id/date_today_id"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView android:id="@+id/textView" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3" android:layout_marginTop="25dp"
                android:text="Feels Like C :" android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/feels_like_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView4"
                android:layout_alignLeft="@+id/air_temperature_today_id" android:layout_alignStart="@+id/air_temperature_today_id"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView

                android:id="@+id/textView4" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/textView" android:layout_marginTop="25dp"
                android:text="Atmosphere pressure :"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/atmo_press_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView6"
                android:layout_alignLeft="@+id/feels_like_id" android:layout_alignStart="@+id/feels_like_id"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView android:id="@+id/textView6" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignRight="@+id/textView4"
                android:layout_below="@+id/textView4" android:layout_marginTop="28dp"
                android:text="Sunrise/Sunset :"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/textView7" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView8" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignRight="@+id/textView8"
                android:layout_below="@+id/textView6" android:layout_marginTop="25dp"
                android:layout_toStartOf="@+id/overall_today_id"
                android:layout_toLeftOf="@+id/overall_today_id"
                android:text="Moonrise/Moonset"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/textView8" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/textView7" android:layout_marginTop="25dp"
                android:text="Chanse of precipitation :"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/susns_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView7"
                android:layout_alignLeft="@+id/atmo_press_id" android:layout_alignStart="@+id/atmo_press_id"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView android:id="@+id/moons_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView8"
                android:layout_alignLeft="@+id/susns_id" android:layout_alignStart="@+id/susns_id"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView android:id="@+id/wind_speed_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/moons_id"
                android:layout_alignParentBottom="true" android:layout_alignStart="@+id/moons_id"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView android:id="@+id/textView2" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignEnd="@+id/textView8"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView8" android:layout_below="@+id/textView8"
                android:layout_marginTop="25dp" android:text="Wind Speed :"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/chanse_id" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView2"
                android:layout_alignLeft="@+id/wind_speed_id" android:layout_alignStart="@+id/wind_speed_id"
                android:text="Medium Text" android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>